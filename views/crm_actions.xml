<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Real Estate Opportunities Action -->
    <record id="action_real_estate_opportunities" model="ir.actions.act_window">
        <field name="name">Opportunités Immobilières</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="domain">[('type', '=', 'opportunity'), '|', ('apartment_id', '!=', False), ('store_product_id', '!=', False)]</field>
        <field name="context">{
            'default_type': 'opportunity',
            'search_default_with_property': 1,
        }</field>
        <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle opportunité immobilière
            </p>
            <p>
                Utilisez les opportunités pour suivre les ventes potentielles de propriétés immobilières.
                Lorsqu'une opportunité est gagnée, la propriété est automatiquement réservée.
            </p>
        </field>
    </record>

    <!-- Real Estate Apartment Opportunities Action -->
    <record id="action_real_estate_apartment_opportunities" model="ir.actions.act_window">
        <field name="name">Opportunités d'Appartements</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="domain">[('type', '=', 'opportunity'), ('property_type', '=', 'apartment'), ('apartment_id', '!=', False)]</field>
        <field name="context">{
            'default_type': 'opportunity',
            'default_property_type': 'apartment',
            'search_default_apartments': 1,
        }</field>
        <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle opportunité d'appartement
            </p>
            <p>
                Utilisez les opportunités pour suivre les ventes potentielles d'appartements.
                Lorsqu'une opportunité est gagnée, l'appartement est automatiquement réservé.
            </p>
        </field>
    </record>

    <!-- Real Estate Store Opportunities Action -->
    <record id="action_real_estate_store_opportunities" model="ir.actions.act_window">
        <field name="name">Opportunités de Magasins</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="domain">[('type', '=', 'opportunity'), ('property_type', '=', 'store'), ('store_product_id', '!=', False)]</field>
        <field name="context">{
            'default_type': 'opportunity',
            'default_property_type': 'store',
            'search_default_stores': 1,
        }</field>
        <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle opportunité de magasin
            </p>
            <p>
                Utilisez les opportunités pour suivre les ventes potentielles de magasins.
                Lorsqu'une opportunité est gagnée, le magasin est automatiquement réservé.
            </p>
        </field>
    </record>

    <!-- We'll use the menu item defined in menu_views.xml instead -->
</odoo>
