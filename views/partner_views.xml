<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Partner Form View to modify function field -->
    <record id="view_partner_form_inherit_function" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.function</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Modify function field label to CIN -->
            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="string">CIN</attribute>
                <attribute name="placeholder">CIN number...</attribute>
            </xpath>
        </field>
    </record>    <!-- Add function(CIN) field to partner search view -->
    <record id="view_res_partner_filter_inherit_function" model="ir.ui.view">
        <field name="name">res.partner.select.inherit.function</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="function" string="CIN"/>
            </xpath>
        </field>
    </record>

    <!-- Add function(CIN) field to partner tree view -->
    <record id="view_partner_tree_inherit_function" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.function</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="function" string="CIN" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
