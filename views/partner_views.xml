<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Partner Form View -->
    <record id="view_partner_form_inherit_cin" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.cin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add CIN field after VAT field -->
            <xpath expr="//field[@name='vat']" position="after">
                <field name="cin"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit User Form View -->
    <record id="view_users_form_inherit_cin" model="ir.ui.view">
        <field name="name">res.users.form.inherit.cin</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Add CIN field after login field -->
            <xpath expr="//field[@name='login']" position="after">
                <field name="cin"/>
            </xpath>
        </field>
    </record>

    <!-- Add CIN field to partner search view -->
    <record id="view_res_partner_filter_inherit_cin" model="ir.ui.view">
        <field name="name">res.partner.select.inherit.cin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="cin"/>
            </xpath>
        </field>
    </record>

    <!-- Add CIN field to partner tree view -->
    <record id="view_partner_tree_inherit_cin" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.cin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="cin" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
