<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Building Form View -->
    <record id="view_real_estate_building_form" model="ir.ui.view">
        <field name="name">real.estate.building.form</field>
        <field name="model">real.estate.building</field>
        <field name="arch" type="xml">
            <form string="Building" t-translation="on">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Apartment and Store total buttons -->
                        <button name="action_view_apartments" type="object" class="oe_stat_button" icon="fa-home">
                            <field name="apartment_count" widget="statinfo" string="Apartments" translate="yes"/>
                        </button>
                        <button name="action_view_stores" type="object" class="oe_stat_button" icon="fa-shopping-bag">
                            <field name="store_count" widget="statinfo" string="Stores" translate="yes"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Building Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" attrs="{'readonly': [('context_project_readonly', '=', True)]}"/>
                            <field name="context_project_readonly" invisible="1"/>
                            <field name="floors"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <!-- Status Overview -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <!-- Apartments Row -->
                            <div class="d-flex align-items-center mb-2">
                                <strong class="mr-3">Apartments:</strong>
                                <span class="text-success mr-3">
                                    <field name="sold_apartment_count" readonly="1" nolabel="1"/> Vendu
                                </span>
                                <span class="text-info mr-3">
                                    <field name="available_apartment_count" readonly="1" nolabel="1"/> Disponible
                                </span>
                                <span class="text-danger">
                                    <field name="reservation_count" readonly="1" nolabel="1"/> Préréservé
                                </span>
                            </div>
                            
                            <!-- Stores Row -->
                            <div class="d-flex align-items-center">
                                <strong class="mr-3">Stores:</strong>
                                <span class="text-success mr-3">
                                    <field name="sold_store_count" readonly="1" nolabel="1"/> Vendu
                                </span>
                                <span class="text-info mr-3">
                                    <field name="available_store_count" readonly="1" nolabel="1"/> Disponible
                                </span>
                                <span class="text-danger">
                                    <field name="reserved_store_count" readonly="1" nolabel="1"/> Préréservé
                                </span>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Building Tree View -->
    <record id="view_real_estate_building_tree" model="ir.ui.view">
        <field name="name">real.estate.building.tree</field>
        <field name="model">real.estate.building</field>
        <field name="arch" type="xml">
            <tree string="Buildings">
                <field name="name"/>
                <field name="project_id"/>
                <field name="floors"/>
                <field name="apartment_count"/>
                <field name="sold_apartment_count"/>
                <field name="available_apartment_count"/>
                <field name="reservation_count"/>
                <field name="store_count"/>
                <field name="sold_store_count"/>
                <field name="available_store_count"/>
                <field name="reserved_store_count"/>
            </tree>
        </field>
    </record>

    <!-- Building Search View -->
    <record id="view_real_estate_building_search" model="ir.ui.view">
        <field name="name">real.estate.building.search</field>
        <field name="model">real.estate.building</field>
        <field name="arch" type="xml">
            <search string="Buildings">
                <field name="name"/>
                <field name="project_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_by_project" domain="[]" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Building Action -->
    <record id="action_real_estate_building" model="ir.actions.act_window">
        <field name="name">Buildings</field>
        <field name="res_model">real.estate.building</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_project': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first building!
            </p>
        </field>
    </record>

    <!-- Action for creating new buildings -->
    <record id="action_create_building" model="ir.actions.act_window">
        <field name="name">Create Building</field>
        <field name="res_model">real.estate.building</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{
            'default_context_project_readonly': False
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new building
            </p>
            <p>
                Fill in the building details including the project it belongs to.
            </p>
        </field>
    </record>
</odoo>
