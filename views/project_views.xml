<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Form View -->
    <record id="view_real_estate_project_form" model="ir.ui.view">
        <field name="name">real.estate.project.form</field>
        <field name="model">real.estate.project</field>
        <field name="arch" type="xml">
            <form string="Project" t-translation="on">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_buildings" type="object" class="oe_stat_button" icon="fa-building">
                            <field name="building_count" widget="statinfo" string="Bâtiments" translate="yes"/>
                        </button>

                        <!-- Property type buttons -->
                        <button name="action_view_apartments" type="object" class="oe_stat_button" icon="fa-home">
                            <field name="apartment_count" widget="statinfo" string="Apartments" translate="yes"/>
                        </button>
                        <button name="action_view_stores" type="object" class="oe_stat_button" icon="fa-shopping-bag">
                            <field name="store_count" widget="statinfo" string="Stores" translate="yes"/>
                        </button>
                        <button name="action_view_equipements" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="equipement_count" widget="statinfo" string="Équipements" translate="yes"/>
                        </button>
                    </div>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="city"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <!-- Status Overview -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <!-- Apartments Row -->
                            <div class="d-flex align-items-center mb-2">
                                <strong class="mr-3">Apartments:</strong>
                                <span class="text-success mr-3">
                                    <field name="sold_apartment_count" readonly="1" nolabel="1"/> Vendu
                                </span>
                                <span class="text-info mr-3">
                                    <field name="available_apartment_count" readonly="1" nolabel="1"/> Disponible
                                </span>
                                <span class="text-danger">
                                    <field name="reservation_count" readonly="1" nolabel="1"/> Préréservé
                                </span>
                            </div>
                            
                            <!-- Stores Row -->
                            <div class="d-flex align-items-center mb-2">
                                <strong class="mr-3">Stores:</strong>
                                <span class="text-success mr-3">
                                    <field name="sold_store_count" readonly="1" nolabel="1"/> Vendu
                                </span>
                                <span class="text-info mr-3">
                                    <field name="available_store_count" readonly="1" nolabel="1"/> Disponible
                                </span>
                                <span class="text-danger">
                                    <field name="reserved_store_count" readonly="1" nolabel="1"/> Préréservé
                                </span>
                            </div>
                            
                            <!-- Équipements Row -->
                            <div class="d-flex align-items-center">
                                <strong class="mr-3">Équipements:</strong>
                                <span class="text-success mr-3">
                                    <field name="sold_equipement_count" readonly="1" nolabel="1"/> Vendu
                                </span>
                                <span class="text-info mr-3">
                                    <field name="available_equipement_count" readonly="1" nolabel="1"/> Disponible
                                </span>
                                <span class="text-danger">
                                    <field name="reserved_equipement_count" readonly="1" nolabel="1"/> Préréservé
                                </span>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Address">
                            <field name="address"/>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Project Tree View -->
    <record id="view_real_estate_project_tree" model="ir.ui.view">
        <field name="name">real.estate.project.tree</field>
        <field name="model">real.estate.project</field>
        <field name="arch" type="xml">
            <tree string="Projects">
                <field name="name"/>
                <field name="city"/>
                <field name="building_count"/>
                <field name="apartment_count"/>
                <field name="sold_apartment_count"/>
                <field name="available_apartment_count"/>
                <field name="reservation_count"/>
                <field name="store_count"/>
                <field name="sold_store_count"/>
                <field name="available_store_count"/>
                <field name="reserved_store_count"/>
                <field name="equipement_count"/>
                <field name="sold_equipement_count"/>
                <field name="available_equipement_count"/>
                <field name="reserved_equipement_count"/>
            </tree>
        </field>
    </record>

    <!-- Project Search View -->
    <record id="view_real_estate_project_search" model="ir.ui.view">
        <field name="name">real.estate.project.search</field>
        <field name="model">real.estate.project</field>
        <field name="arch" type="xml">
            <search string="Projects">
                <field name="name"/>
                <field name="city"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="City" name="group_by_city" domain="[]" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Project Kanban View -->
    <record id="view_real_estate_project_kanban" model="ir.ui.view">
        <field name="name">real.estate.project.kanban</field>
        <field name="model">real.estate.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="building_count"/>
                <field name="apartment_count"/>
                <field name="sold_apartment_count"/>
                <field name="available_apartment_count"/>
                <field name="reserved_apartment_count"/>
                <field name="store_count"/>
                <field name="sold_store_count"/>
                <field name="available_store_count"/>
                <field name="reserved_store_count"/>
                <field name="equipement_count"/>
                <field name="sold_equipement_count"/>
                <field name="available_equipement_count"/>
                <field name="reserved_equipement_count"/>
                <field name="logo"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('real.estate.project', 'logo', record.id.raw_value)" alt="Project Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="city"/>
                                </div>
                                <div>
                                    <span><t t-esc="record.building_count.value"/> <span t-translation="on">Bâtiments</span></span>
                                </div>

                                <!-- Apartment information -->
                                <div class="mt-2">
                                    <strong class="text-primary"><span t-translation="on">Apartments:</span></strong> <t t-esc="record.apartment_count.value"/>
                                </div>
                                <div>
                                    <span class="text-success"><t t-esc="record.sold_apartment_count.value"/> <span t-translation="on">Vendu</span></span>
                                    <span class="text-info ml-2"><t t-esc="record.available_apartment_count.value"/> <span t-translation="on">Disponible</span></span>
                                    <span class="text-danger ml-2"><t t-esc="record.reserved_apartment_count.value"/> <span t-translation="on">Préréservé</span></span>
                                </div>

                                <!-- Store information -->
                                <div class="mt-2">
                                    <strong class="text-info"><span t-translation="on">Stores:</span></strong> <t t-esc="record.store_count.value"/>
                                </div>
                                <div>
                                    <span class="text-success"><t t-esc="record.sold_store_count.value"/> <span t-translation="on">Vendu</span></span>
                                    <span class="text-info ml-2"><t t-esc="record.available_store_count.value"/> <span t-translation="on">Disponible</span></span>
                                    <span class="text-danger ml-2"><t t-esc="record.reserved_store_count.value"/> <span t-translation="on">Préréservé</span></span>
                                </div>

                                <!-- Équipement information -->
                                <div class="mt-2">
                                    <strong class="text-warning"><span t-translation="on">Équipements:</span></strong> <t t-esc="record.equipement_count.value"/>
                                </div>
                                <div>
                                    <span class="text-success"><t t-esc="record.sold_equipement_count.value"/> <span t-translation="on">Vendu</span></span>
                                    <span class="text-info ml-2"><t t-esc="record.available_equipement_count.value"/> <span t-translation="on">Disponible</span></span>
                                    <span class="text-danger ml-2"><t t-esc="record.reserved_equipement_count.value"/> <span t-translation="on">Préréservé</span></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Project Action -->
    <record id="action_real_estate_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">real.estate.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first real estate project!
            </p>
        </field>
    </record>
</odoo>
