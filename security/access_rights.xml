<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Access rights for sale agents to specific actions -->
        <record id="rule_real_estate_sale_agent_actions" model="ir.rule">
            <field name="name">Real Estate Sale Agent Action Access</field>
            <field name="model_id" ref="base.model_ir_actions_act_window"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('wm_real_estate.group_real_estate_sale_agent'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Menu access for sale agents -->
        <record id="rule_real_estate_sale_agent_menu" model="ir.rule">
            <field name="name">Real Estate Sale Agent Menu Access</field>
            <field name="model_id" ref="base.model_ir_ui_menu"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('wm_real_estate.group_real_estate_sale_agent'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
