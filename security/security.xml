<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Real Estate Category -->
        <record id="module_category_real_estate" model="ir.module.category">
            <field name="name">Real Estate</field>
            <field name="description">Helps you manage your real estate properties</field>
            <field name="sequence">20</field>
        </record>

        <!-- Real Estate Access Rights Group -->
        <record id="group_real_estate_sale_agent" model="res.groups">
            <field name="name">Sale Agent</field>
            <field name="category_id" ref="module_category_real_estate"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Sale Agents have read-only access to price and quantity fields in sale orders and invoices</field>
        </record>

        <!-- Real Estate Manager Group -->
        <record id="group_real_estate_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_real_estate"/>
            <field name="implied_ids" eval="[(4, ref('group_real_estate_sale_agent'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Multi-company Rules -->
        <record id="real_estate_project_comp_rule" model="ir.rule">
            <field name="name">Real Estate Project multi-company</field>
            <field name="model_id" ref="model_real_estate_project"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="real_estate_building_comp_rule" model="ir.rule">
            <field name="name">Real Estate Building multi-company</field>
            <field name="model_id" ref="model_real_estate_building"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="real_estate_apartment_comp_rule" model="ir.rule">
            <field name="name">Real Estate Apartment multi-company</field>
            <field name="model_id" ref="model_real_estate_apartment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Sale Order Rules -->
        <record id="real_estate_sale_order_rule" model="ir.rule">
            <field name="name">Real Estate Sale Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="groups" eval="[(4, ref('group_real_estate_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Sale Order Rules for Sale Agents -->
        <record id="real_estate_sale_order_rule_agent" model="ir.rule">
            <field name="name">Real Estate Sale Orders - Sale Agent</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="groups" eval="[(4, ref('group_real_estate_sale_agent'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Invoice Rules for Sale Agents -->
        <record id="real_estate_invoice_rule_agent" model="ir.rule">
            <field name="name">Real Estate Invoices - Sale Agent</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="groups" eval="[(4, ref('group_real_estate_sale_agent'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
